{
  "MongoDbSettings": {
    "ConnectionStringSecretName": "cps-aas-mongo-db-uri",
    "DatabaseSecretName": "aps-mongo-db-database-name",
    "Certificate": {
      "PathSecretName": "/secrets/cps-aas-mongo-db-cert"
    },
    "Timeouts": {
      "ConnectionTimeoutSeconds": 10,
      "SocketTimeoutSeconds": 30
    },
    "Collections": {
      "Accounts": "accounttests"
    }
  },
  "SwaggerSettings": {
    "TermsOfServiceUrl": "https://www.mckesson.com/About-McKesson/Patents/"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Error",
        "System": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\Aps\\ApsConfigurationApis-.log",
          "rollingInterval": "Day",
          "shared": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [0] {Level} TraceID={TracedID} {Message}{NewLine:1}{Exception:1}",
          "fileSizeLimitBytes": 262144000, // 250 MB
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": null
        }
      }
    ]
  }
}